class Solution {
    public ArrayList<Integer> bfs(ArrayList<ArrayList<Integer>> adj) {
        // code here
        ArrayList<Integer> res = new ArrayList<>() ;
        int V = adj.size() ;
        boolean[] visited = new boolean[V] ;
        Queue<Integer> q = new LinkedList<>() ;
        visited[0] = true  ;
        q.offer(0) ;
        while(!q.isEmpty()){
            int a = q.poll() ;
            res.add(a) ;
           for(int neigh : adj.get(a)){
               if(!visited[neigh]){
                   visited[neigh] = true  ;
                   q.offer(neigh) ;
               }
               
           }
            
            
        }
        return res  ;
    }
}
